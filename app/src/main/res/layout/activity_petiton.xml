<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context=".petiton">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="343dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo2" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/imageView10"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textline"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="  청원 제목을 입력해주세요."
        android:inputType="textMultiLine"
        android:textSize="20sp"
        android:textStyle="normal"
        android:maxLength="50"/>

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/editTextTextMultiLine"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textline"
        android:ems="10"
        android:gravity="start|top"
        android:hint=" 내용을 입력해주세요(*자세히 입력해주세요)"
        android:inputType="textMultiLine"
        android:maxLength="2000" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextMultiLine2"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:text="*좋아요 수가 전교생의 20&가 넘으면 필수 답변 청원이 됩니다.*" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView40"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:text="*청원을 하기 위해선 지문인식이 필요합니다.*" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView41"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:text="*한 달 후에 좋아요 수가 싫어요 수보다 적거나 좋아요 수와 싫어요 수 차이가 5% 이하면 자동 삭제됩니다.*" />

    <Button
        android:id="@+id/button12"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView42"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#3D4EFF"
        android:text="청원하기"
        android:textSize="16sp" />
</RelativeLayout>